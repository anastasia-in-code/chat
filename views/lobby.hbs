 <div class="block-panel">
      <div class="row">
        <div class="col-lg-12">
          <form method="POST">
            <div class="input-group">
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Create room</button>
            </span>
            <input type="text" value="{{roomNameValue}}" name="newroom" class="form-control">
          </div>
                <p>{{errorsMsgs.newroom}}</p>
          </form>
        </div>
      </div>
      <h1>Available rooms</h1>
      <div class="list-group">
        {{#each roomsNames}}
         <a href="/lobby{{link}}" class="list-group-item">{{name}}</a>
        {{/each}}
      </div>
